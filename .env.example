# AegisX Environment Configuration
# Copy to .env and fill in your values

# ── Database ──────────────────────────────────────────────────────────────────
POSTGRES_DB=aegisx
POSTGRES_USER=aegisx
POSTGRES_PASSWORD=changeme_in_production

# ── Authentication ────────────────────────────────────────────────────────────
JWT_SECRET=please-change-this-to-a-64-char-random-secret
ADMIN_USER=admin
ADMIN_PASSWORD=changeme_in_production

# ── Firewall ──────────────────────────────────────────────────────────────────
# Set to false on a real system with nftables installed
FIREWALL_DRY_RUN=true

# ── Network interfaces ────────────────────────────────────────────────────────
WAN_INTERFACE=eth0
LAN_INTERFACE=eth1

# ── Logging ───────────────────────────────────────────────────────────────────
LOG_LEVEL=info

# ── Features ──────────────────────────────────────────────────────────────────
ENABLE_IDS=false
ENABLE_LB=false
ENABLE_VPN=false
